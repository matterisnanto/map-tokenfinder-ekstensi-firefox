{
    "manifest_version": 3,
    "name": "MAP subsiditepat token finder",
    "version": "1.0",
    "description": "Secara otomatis mendeteksi dan menampilkan Bearer Token dari API MyPertamina.",
    "permissions": [
      "storage",
      "webRequest",
      "clipboardWrite"
    ],
    "host_permissions": [
        "*://api-map.my-pertamina.id/*",
        "*://subsiditepatlpg.mypertamina.id/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "map_subsiditepat_token_finder@matterisnanto.id",
        "strict_min_version": "109.0"
      }
    }
  }